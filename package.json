    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs",
    "node": "./dist/index.mjs",
    "default": "./dist/index.cjs"
  },
  "directories": {
    "lib": "src"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "ts-node src/index",
    "format": "biome check --fix",
