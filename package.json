  "bugs": {
    "url": "https://github.com/8beeeaaat/react-tauri-store/issues"
  },
  "homepage": "https://github.com/8beeeaaat/react-tauri-store#readme",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.0.4",
    "esbuild": "^0.25.8",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@tauri-apps/plugin-store": "^2.3.0",
    "react": "^19.1.0"
  }
